{
    "brand": {
        "name": "KMR-BEAUTY Typography",
        "version": "1.0"
    },
    "fonts": {
        "primary": {
            "name": "Poppins",
            "url": "https://fonts.google.com/specimen/Poppins",
            "weights": [
                "400",
                "500",
                "600",
                "700"
            ],
            "usage": "Titres, headings, brand, boutons"
        },
        "secondary": {
            "name": "Montserrat",
            "url": "https://fonts.google.com/specimen/Montserrat",
            "weights": [
                "400",
                "500",
                "600",
                "700"
            ],
            "usage": "Sous-titres, headings alternatifs"
        },
        "body": {
            "name": "Inter",
            "url": "https://fonts.google.com/specimen/Inter",
            "weights": [
                "400",
                "500",
                "600"
            ],
            "usage": "Body text, captions, UI elements"
        }
    },
    "textStyles": {
        "h1": {
            "fontFamily": "Poppins",
            "fontSize": "32px",
            "fontWeight": "700",
            "lineHeight": "40px",
            "letterSpacing": "-0.5px",
            "example": "Find Your Look"
        },
        "h2": {
            "fontFamily": "Poppins",
            "fontSize": "24px",
            "fontWeight": "700",
            "lineHeight": "32px",
            "letterSpacing": "-0.25px",
            "example": "Popular Services"
        },
        "h3": {
            "fontFamily": "Poppins",
            "fontSize": "18px",
            "fontWeight": "600",
            "lineHeight": "24px",
            "letterSpacing": "0",
            "example": "Featured Salons"
        },
        "h3Alt": {
            "fontFamily": "Montserrat",
            "fontSize": "18px",
            "fontWeight": "700",
            "fontStyle": "italic",
            "lineHeight": "24px",
            "example": "Featured Salons"
        },
        "body": {
            "fontFamily": "Inter",
            "fontSize": "16px",
            "fontWeight": "400",
            "lineHeight": "24px",
            "example": "Book your appointment easily..."
        },
        "bodyMedium": {
            "fontFamily": "Inter",
            "fontSize": "16px",
            "fontWeight": "500",
            "lineHeight": "24px"
        },
        "caption": {
            "fontFamily": "Inter",
            "fontSize": "14px",
            "fontWeight": "400",
            "lineHeight": "20px",
            "example": "Terms and conditions apply"
        },
        "captionItalic": {
            "fontFamily": "Inter",
            "fontSize": "14px",
            "fontWeight": "400",
            "fontStyle": "italic",
            "lineHeight": "20px"
        },
        "small": {
            "fontFamily": "Inter",
            "fontSize": "12px",
            "fontWeight": "400",
            "lineHeight": "16px"
        },
        "button": {
            "fontFamily": "Poppins",
            "fontSize": "16px",
            "fontWeight": "600",
            "lineHeight": "24px",
            "textTransform": "none"
        },
        "buttonSmall": {
            "fontFamily": "Poppins",
            "fontSize": "14px",
            "fontWeight": "600",
            "lineHeight": "20px"
        },
        "tabLabel": {
            "fontFamily": "Inter",
            "fontSize": "11px",
            "fontWeight": "600",
            "lineHeight": "14px",
            "textTransform": "uppercase"
        }
    },
    "googleFontsImport": "@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Montserrat:ital,wght@0,400;0,500;0,600;0,700;1,700&family=Poppins:wght@400;500;600;700&display=swap');"
}